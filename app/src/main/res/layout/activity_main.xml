<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Contenedor desplazable -->

    <!-- MenÃº inferior -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- TÃ­tulo de la app -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¡ HomeSpotter"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- DescripciÃ³n corta -->
            <TextView
                android:id="@+id/short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Separador decorativo -->
            <View
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="@color/primary"
                android:layout_marginBottom="24dp" />

            <!-- DescripciÃ³n extendida -->
            <TextView
                android:id="@+id/extended_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appDesc"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Texto motivacional -->
            <TextView
                android:id="@+id/motivational_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phrase"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />
            <Button
                android:id="@+id/btn_select_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_language" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
