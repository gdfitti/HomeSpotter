<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margenLeftChat"
    android:layout_marginLeft="@dimen/margenLeftChat"
    android:layout_marginBottom="@dimen/margenBalloonBottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_right"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingStart="@dimen/paddingBalloonDirLeft"
        android:paddingLeft="@dimen/paddingBalloonDirLeft"
        android:paddingTop="@dimen/paddingBalloonDirTop"
        android:paddingEnd="@dimen/paddingBalloonDirRight"
        android:paddingRight="@dimen/paddingBalloonDirRight"
        android:paddingBottom="@dimen/paddingBalloonDirBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewContenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_chat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFecha"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:textColor="@color/light_gray"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
