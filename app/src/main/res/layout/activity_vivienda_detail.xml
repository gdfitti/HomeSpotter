<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ViewPager para las imágenes -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager_images"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Sección del Propietario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Foto del Propietario -->
            <ImageView
                android:id="@+id/owner_photo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_user"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView

                    android:id="@+id/owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:text="Nombre del Propietario"
                    android:contentDescription="@string/owner_photo"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/telephone"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_tlfno"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:id="@+id/owner_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Contacto"
                        android:contentDescription="@string/owner_photo"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
        </LinearLayout>
        <!-- Título de la vivienda -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="Título de la vivienda" />

        <!-- Precio de la vivienda -->
        <TextView
            android:id="@+id/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp"
            android:text="Precio de la vivienda" />

        <!-- Dirección -->
        <TextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Dirección de la vivienda" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Descripción de la vivienda" />

        <!-- Contenedor para botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- Botón de Favorito -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_favorites"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_to_favorites"
                android:layout_marginEnd="16dp" />

            <!-- Botón de Volver -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
