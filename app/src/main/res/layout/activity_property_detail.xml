<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/property_gallery"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/property_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la propiedad"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $150,000"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/property_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección: Calle Falsa 123"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/property_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción: Casa moderna con piscina."
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>