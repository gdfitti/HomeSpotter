<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margenBalloonBottom"
    android:layout_marginEnd="@dimen/margenRightChat"
    android:layout_marginRight="@dimen/margenRightChat"
    android:background="@drawable/balloon_left"
    android:paddingBottom="@dimen/paddingBalloonEsqBottom"
    android:paddingEnd="@dimen/paddingBalloonEsqRight"
    android:paddingLeft="@dimen/paddingBalloonEsqLeft"
    android:paddingRight="@dimen/paddingBalloonEsqRight"
    android:paddingStart="@dimen/paddingBalloonEsqLeft"
    android:paddingTop="@dimen/paddingBalloonEsqTop">

    <TextView
        android:id="@+id/textViewContenido"
        android:autoLink="web"
        android:linksClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_chat"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textViewFecha"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/light_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContenido" />
</androidx.constraintlayout.widget.ConstraintLayout>